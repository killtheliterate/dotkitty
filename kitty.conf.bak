# vim:ft=kitty

font_family       JetBrains Mono
# OR #
font_family       MonoLisa
bold_font         auto
bold_italic_font  auto
italic_font       auto
font_size         14.0

# MonaLisa
# adjust_baseline -4
font_features MonoLisa-Medium +zero +ss04 +ss07 +ss08 +ss09
font_features MonoLisa-MediumItalic +zero +ss04 +ss07 +ss08 +ss09

# modify_font       cell_height 1.2
# cursor_shape      block
# shell_integration no_cursor

clipboard_control write-clipboard write-primary read-clipboard-ask read-primary-ask no-append

map cmd+shift+t kitten launch --type=overlay sh -c './tab-name.sh && tmux'

# for set-colors
allow_remote_control yes

# BEGIN_KITTY_THEME
# Catppuccin-Latte
include current-theme.conf
# END_KITTY_THEME
